
<style>
body { 
  background: url(<%= @background_gif[:background] %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
</style>
<img id="logo" src="/images/cool_logo1.png">
<div class="text_field">
<%= simple_form_for @user, url: "/" do |f| %>
  <%= f.input :gif_search_query, label: false %>
  </div>
<div class="submit">  
  <%= f.button :submit, 'Find Gifs', :class => 'btn-danger' %>
<% end %>

<button type="button" class="btn btn-danger" id="background_gif"  data-clipboard-text= <%= @background_gif[:original] %> title="Click to copy.">Copy Background GIF</button>
